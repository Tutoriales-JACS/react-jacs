{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                                  
    "module": "commonjs",                               
    "rootDir": "./",                                 
    "outDir": "./dist", 
    "typeRoots": [
      "node_modules/@types",
      "./api/types"
    ],                                       
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                                      
    "skipLibCheck": true                           
  },
  "exclude": [
      "node_modules",
  ]     
}
